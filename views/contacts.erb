<img src="/hi_bitmaker_small.png" class="small_main_logo">

<div class="all_contacts_nav_box"></div>

<div class="create_new">
	<h1>ALL CONTACTS</h1>

	<div class="over_score_all_contact"></div>

	<table>
		<tr>
			<th>FIRST NAME</th>
			<th>LAST NAME</th>
			<th>EMAIL</th>
			<th>NOTE</th>
			<th>ID</th>
		</tr>
	</table>	

	<table>
		<% @contacts.each do |contact| %>
		<tr>
			<td><%= contact.first_name.capitalize %></td>
			<td><%= contact.last_name.capitalize %></td>
			<td><%= contact.email.capitalize %></td>
			<td><%= contact.note.to_s.capitalize %></td>
			<td><%= contact.id%></td>
		</tr>
		<% end %>
	</table>
</div>

<div class="under_score_all_contact"></div>
<h3 class="left_just_add_contacts"><a href="/contacts/new">Add a contact</a></h3>
<h3 class="return_to_main"><a href="/">Return to Main Menu</a></h3>
